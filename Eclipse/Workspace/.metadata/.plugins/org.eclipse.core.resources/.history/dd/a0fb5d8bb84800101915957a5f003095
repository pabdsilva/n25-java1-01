package br.com.senaisp.baur.aula04;

import java.util.Scanner;

public class Exercicio01 {

	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		System.out.println("Digite o seu nome completo");
		String nome = sc.nextLine();
		//Exemplo: Roberto da Silva Sauro
		//Obter o primeiro nome e o Ãºltimo nome que foi digitado
		String priNome = nome.substring(0,nome.indexOf(" "));//Roberto
		String ultNome = nome.substring(0,nome.lastIndexOf(" "));//Sauro
		System.out.println(priNome);
		System.out.println(ultNome);
		
	}

}
